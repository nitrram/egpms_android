<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfileActivity">

    <EditText
        android:id="@+id/edit_name"
        android:hint="alias"
        style="@style/EditItem" />

    <TextView
        android:text="name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@id/edit_name"
        app:layout_constraintTop_toTopOf="@id/edit_name"
        />

    <Spinner
        android:id="@+id/edit_proto"
        style="@style/Base.Widget.AppCompat.Spinner.Underlined"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="48dp"
        android:layout_marginTop="25dp"
        android:layout_marginBottom="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/edit_name"
        >

    </Spinner>

    <TextView
        android:text="proto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@id/edit_proto"
        app:layout_constraintTop_toTopOf="@id/edit_proto"
        />

    <EditText
        android:id="@+id/edit_address"
        android:inputType="number|numberDecimal"
        android:digits="0123456789."
        android:layout_marginTop="25dp"
        style="@style/EditItem"
        app:layout_constraintTop_toBottomOf="@+id/edit_proto"/>

    <TextView
        android:text="ip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@id/edit_address"
        app:layout_constraintTop_toTopOf="@id/edit_address"
        />

    <EditText
        android:id="@+id/edit_port"
        android:inputType="number|numberDecimal"
        android:digits="0123456789."
        android:layout_marginTop="25dp"
        style="@style/EditItem"
        app:layout_constraintTop_toBottomOf="@+id/edit_address"/>

    <TextView
        android:text="port"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@id/edit_port"
        app:layout_constraintTop_toTopOf="@id/edit_port"
        />

